<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:orientation="horizontal"

       >
        <Button
            android:layout_width="70px"
            android:layout_height="70px"
            android:layout_weight="0.1"
            android:layout_marginLeft="10px"
            android:background="@drawable/arrow04"
            android:layout_gravity="center"
            android:id="@+id/main_exit"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="100px"
            android:layout_weight="4"
            android:text="托管信息"
            android:textSize="34px"
            android:textColor="#333333"
            android:gravity="center"
            android:id="@+id/textView"
            android:layout_marginLeft="40px"
            android:layout_gravity="center_horizontal"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/space"/>
    </com.zhy.autolayout.AutoLinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="#FF999999"/>
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="0.8"
        android:orientation="horizontal" >
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:orientation="horizontal" >  </com.zhy.autolayout.AutoLinearLayout>
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></com.zhy.autolayout.AutoLinearLayout>
        <EditText
            android:id="@+id/main_sousuoeeee"
            android:layout_width="0px"
            android:layout_height="64px"
            android:layout_weight="8"
            android:hint="请输入手机号码搜索"
            android:textSize="27px"
            android:singleLine="true"
            android:maxLength="16"
            android:textColor="#000000"
            android:textColorHint="#b2b2b2"
            android:layout_marginRight="2px"
            android:drawablePadding="10px"
            android:paddingLeft="10px"

            android:drawableLeft="@drawable/main_sousuo"
            android:background="@drawable/searchstyle"/>
        <Button
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:text="搜索"
            android:textSize="26px"
            android:gravity="right|center_vertical"
            android:paddingRight="50px"
            android:textColor="#666666"
            android:id="@+id/main_search"
            android:background="#00000000"
            android:layout_weight="2" />
    </com.zhy.autolayout.AutoLinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#FFCCCCCC"/>


    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="0.7"
        android:orientation="horizontal" >


        <TextView
            android:id="@+id/main_xinxi"
            android:text="托管信息"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:textSize="30px"
            android:textColor="#666666"
            android:gravity="center_vertical"

            />
        <TextView

            android:text="共"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:textSize="25px"
            android:textColor="#666666"
            android:layout_gravity="center"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/main_num"
            android:text="12"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:textSize="30px"
            android:textColor="#ff8158"
            android:layout_gravity="center"
            android:gravity="center" />
        <TextView

            android:text="人"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:textSize="25px"
            android:textColor="#666666"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginRight="50px"/>
    </com.zhy.autolayout.AutoLinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#FFCCCCCC"/>
    <android.support.v7.widget.RecyclerView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="6"
        android:id="@+id/rv_list"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#FFCCCCCC"/>
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:orientation="horizontal" >


        <Button
            android:layout_width="360px"
            android:layout_height="130px"
            android:text="新增托管"
            android:textColor="#666666"
            android:background="#00000000"

            android:drawableLeft="@drawable/main_img4"
            android:paddingLeft="50px"
            android:paddingRight="50px"
            android:drawablePadding="20px"
            android:gravity="center_vertical"
            android:id="@+id/main_add" />
        <View
            android:layout_width="2px"
            android:layout_height="80px"
            android:layout_marginTop="20px"
            android:background="#FFCCCCCC"/>
        <Button
            android:layout_width="360px"
            android:layout_height="130px"
            android:text="扫二维码"
            android:textColor="#666666"
            android:background="#00000000"
            android:paddingLeft="50px"
            android:paddingRight="50px"
            android:drawablePadding="20px"
            android:drawableLeft="@drawable/er"
            android:id="@+id/main_get"
            android:gravity="center_vertical"/>
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>