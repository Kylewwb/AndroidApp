<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10px"
    android:background="#00ff2222"
    android:id="@+id/realxxx"
    >

        <ImageView
            android:layout_width="330px"
            android:layout_height="260px"
            android:id="@+id/realxx_image"
            android:background="@drawable/realimg0"

          />
        <com.zhy.autolayout.AutoLinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/realxx_image"
            android:layout_alignParentStart="true"
            >

    <com.zhy.autolayout.AutoRelativeLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/realxx_image"
        android:layout_alignParentStart="true"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="视频1"
            android:textSize="32px"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_marginLeft="10px"
            android:layout_marginTop="10px"
            android:id="@+id/realxx_tv1"
            />
        
        <ImageView
            android:layout_width="44px"
            android:layout_height="44px"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10px"
            android:background="@drawable/jiankong"
            />
        </com.zhy.autolayout.AutoRelativeLayout>
         <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="海洋球周围"
                    android:textSize="28px"
                    android:textColor="#999999"
                    android:gravity="center"
                    android:id="@+id/realxx_tv2"
                    android:layout_marginLeft="10px"
                    android:layout_marginBottom="10px"
                />
        </com.zhy.autolayout.AutoLinearLayout>







</com.zhy.autolayout.AutoRelativeLayout>
